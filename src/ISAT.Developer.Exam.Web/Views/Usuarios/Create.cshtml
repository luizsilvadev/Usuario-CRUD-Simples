@model ISAT.Developer.Exam.Web.Models.UsuarioViewModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">@ViewData["Title"]</h4>
        <p class="card-category">
            Cadastro de Novo Usuário
        </p>
    </div>

    <div class="card-body">
        <form asp-action="Create">
            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating" asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" maxlength="255" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Sobrenome</label>
                        <input asp-for="Sobrenome" class="form-control" maxlength="255"/>
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Idade</label>
                        <input asp-for="Idade" class="form-control"/>
                        <span asp-validation-for="Idade" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>

            <div>
                <a asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
