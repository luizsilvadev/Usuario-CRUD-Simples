@model ISAT.Developer.Exam.Web.Models.UsuarioViewModel
@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title ">@ViewData["Title"]</h4>
        <p class="card-category">
            Visualização dos Detalhes do Usuário
        </p>

    </div>

    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Id) : </label>
                        @Html.DisplayFor(model => model.Id, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Nome) : </label>
                        @Html.DisplayFor(model => model.Nome, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Sobrenome) : </label>
                        @Html.DisplayFor(model => model.Sobrenome, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Email) : </label>
                        @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Html.DisplayNameFor(model => model.Idade) : </label>
                        @Html.DisplayFor(model => model.Idade, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            </div>

            <div>
                <a asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>

</div>


<script src="~/js/categoria.js"></script>
